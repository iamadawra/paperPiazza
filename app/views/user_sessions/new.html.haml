-provide :title, "Log In"

#log_in_form.span4

  %h1 Log In

  = form_tag login_post_path do |f|
    
    = label_tag       :email
    = text_field_tag  :email, params[:email]

    = label_tag           :password
    = password_field_tag  :password

    %p
      = check_box_tag   :remember_me, 1, params[:remember_me]
      = label_tag       :remember_me, "Keep me logged in", :class => :inline
      %br

    .button_container
      = submit_tag "Log In", :class => ["btn btn-large btn-primary"]
      = link_to    "Forgot your password?", new_password_reset_path, :class => ["btn btn-large btn-primary"]

  %p
    Don't have an account yet? 
    = link_to "Create one now!", register_path
